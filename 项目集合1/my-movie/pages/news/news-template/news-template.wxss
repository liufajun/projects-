.articleList{
  display:flex;
  flex-direction: column;
  margin-top:20rpx;
  margin-bottom:20rpx;
  background:#fff;
  border-bottom: 1px solid #ededed;
  padding: 10px;
  padding-bottom: 40rpx;
}
.author-info{
  font-size:26rpx;
}
.author-icon{
  width:80rpx;
  height:80rpx;
  vertical-align: middle;
}
.author-name{
  margin:0 20rpx;
}
.author-date{
  margin-top: 10rpx;
  margin-bottom: 20rpx;
}
.news-title{
  font-size: 34rpx;
  font-weight: 700;
  color:#333;
  padding:10px 0;
}
.news-img{
  margin-left:32rpx;
  width:100%;
  height:340rpx;
  margin:auto 0;
  margin-bottom:10rpx;
}
.news-text{
  font-size:28rpx;
  letter-spacing: 1px;
  margin-bottom: 20rpx;
 
}
.news-list-bottom{
  font-size:26rpx;
  flex-direction: row;
  line-height: 32rpx;
  margin-top:20rpx;
}
.news-like-icon{
  height:32rpx;
  width:32rpx;
  margin-right:8px;
  vertical-align: middle;
}
.news-like-text{
  margin-right:40rpx;
  vertical-align: middle;
}
  