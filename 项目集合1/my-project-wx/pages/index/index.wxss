/* pages/index/index.wxss */
@import "../common-template/swiper-template/swiper.wxss";
@import "../common-template/category-template/category.wxss";
@import "../common-template/copyright-template/copyright.wxss";
.about-company{display:flex;padding:0 20rpx;box-sizing: border-box;}
.about-left{margin-right: 20rpx;flex:1;border:1px solid red;}
.about-img1{height:80rpx;font-size: 24rpx;background-color: yellow;
   line-height: 80rpx;text-align: center;}
.about-img2{height:160rpx;font-size: 24rpx;background-color: yellow;
   line-height: 160rpx;text-align: center;margin-top:20rpx;}
.about-right{flex:3;border: 1px solid blue;}
.about-title{font-size:26rpx;font-weight:bold;letter-spacing:1px;padding-bottom:5rpx;}
.about-profile{display:flex;justify-content: space-between;padding-bottom:10rpx;color:#666;}
.profile-box{display:flex;align-items: center;}
.about-line{width:80rpx;height:6rpx;background: green;}
.profile{margin-left:20rpx;font-size:20rpx;}
.about-more{font-size:20rpx;}
.about-text{font-size:20rpx;text-align: justify;line-height: 1.6;color:#333;
   display:-webkit-box;overflow: hidden;-webkit-line-clamp:6;            -webkit-box-orient: vertical; }
.wandering{margin-top:60rpx;margin-bottom:200px;}
.wandering-header{border-bottom:1px solid #000;text-align: center;font-size: 20rpx;
letter-spacing: 1px;}
.wandering-tag{width:250rpx;height:52rpx;line-height: 52rpx;margin: 0 auto;background-color: #000;color:#fff;font-size: 26rpx;}
.wandering-tag text{padding:0 2px;}
.hifumi{font-size: 20rpx;text-align: center;padding:20rpx;box-sizing: border-box;}
.hifumi view{background-color:#ccc;}
.hifumi-item1{width:470rpx;height:300rpx;margin-right:14rpx;float:left;}
.hifumi-item2{height:270rpx;width:229rpx;float: right;}
.hifumi-item3{width:350rpx;height:150rpx;margin:14rpx 14rpx 14rpx 0;float:left;}
.hifumi-item4{float: right;height:235rpx;width:349rpx;margin:14rpx 0;}
.hifumi-item5{float:left;width:350rpx;height:389rpx;}
.hifumi-item6{float:right;width:330rpx;height:90rpx;}
.hifumi-item7{float:right;width:300rpx;height:200rpx;margin-top: 14rpx;}